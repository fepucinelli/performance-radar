# ============================================================
# Performance Radar — Environment Variables
# Copy this file to .env.local and fill in your values.
# See docs/architecture.md for setup instructions per service.
# ============================================================

# ---- App ----
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ---- Database (Neon PostgreSQL) ----
# Get from: https://neon.tech → Project → Connection string
DATABASE_URL=

# ---- Auth (Clerk) ----
# Get from: https://clerk.com → API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
# Created in Clerk Dashboard → Webhooks → Add Endpoint
CLERK_WEBHOOK_SECRET=

# Clerk redirect paths (must match routes in the app)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ---- Google APIs (Phase 1) ----
# Get from: https://console.cloud.google.com → APIs & Services → Credentials
# Enable: "PageSpeed Insights API" and "Chrome UX Report API"
GOOGLE_API_KEY=

# ---- Stripe (Phase 2) ----
# Get from: https://dashboard.stripe.com → Developers → API keys
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
# Price IDs from Stripe Products
STRIPE_STARTER_PRICE_ID=
STRIPE_PRO_PRICE_ID=
STRIPE_AGENCY_PRICE_ID=

# ---- Email — Resend (Phase 2) ----
# Get from: https://resend.com → API Keys
RESEND_API_KEY=

# ---- Queue + Cache — Upstash (Phase 2) ----
# Get from: https://console.upstash.com → Redis (for cache) + QStash (for jobs)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=
QSTASH_TOKEN=
QSTASH_CURRENT_SIGNING_KEY=
QSTASH_NEXT_SIGNING_KEY=

# ---- Storage — Vercel Blob (Phase 3) ----
# Automatically set when connected via Vercel dashboard
BLOB_READ_WRITE_TOKEN=

# ---- Error Tracking — Sentry (optional) ----
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# ---- Product Analytics — PostHog (optional) ----
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# ---- AI — Anthropic (Phase 4) ----
ANTHROPIC_API_KEY=
